{
  "name": "plumbers-portal",
  "version": "0.1.0",
  "description": "A comprehensive platform connecting customers with professional plumbers for all their plumbing needs",
  "private": true,
  "scripts": {
    "use:dev": "node -e \"const fs=require('fs');if(!fs.existsSync('.env.dev')){console.error('❌ .env.dev missing');process.exit(1);}fs.copyFileSync('.env.dev','.env.local');console.log('✅ Switched to DEVELOPMENT mode (.env.dev → .env.local)');\"",
    "use:prod": "node -e \"const fs=require('fs');if(!fs.existsSync('.env.prod')){console.error('❌ .env.prod missing');process.exit(1);}fs.copyFileSync('.env.prod','.env.local');console.log('✅ Switched to PRODUCTION mode (.env.prod → .env.local)');\"",
    "dev": "next dev",
    "build": "next build",
    "start": "next start --port 4000",
    "start:prod": "NODE_ENV=production next start --port 4000",
    "lint": "eslint src --cache",
    "lint:fix": "eslint src --fix --cache",
    "lint:strict": "eslint src --cache --max-warnings=0",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test": "NODE_OPTIONS=--no-deprecation jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "reset-dev-data": "node scripts/reset-dev-data.js",
    "migrate-cert-files": "node scripts/migrate-certification-files.js",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/stripe/webhook",
    "deploy:functions": "cd functions && firebase deploy --only functions",
    "build:functions": "cd functions && npm install && npm run build",
    "update:algolia": "node scripts/update-algolia-facets.mjs",
    "update:algolia:build": "npm run build && node scripts/update-algolia-facets.mjs",
    "seed:dev": "tsx scripts/seed-test-data.ts",
    "emulators": "firebase emulators:start --import=./.firebase/emulators --export-on-exit=./.firebase/emulators"
  },
  "dependencies": {
    "@auth/firebase-adapter": "^2.10.0",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@stripe/stripe-js": "^3.5.0",
    "@tabler/icons-react": "^3.35.0",
    "@upstash/ratelimit": "^1.2.1",
    "@upstash/redis": "^1.35.3",
    "algoliasearch": "^5.42.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "firebase": "^12.0.0",
    "firebase-admin": "^12.7.0",
    "lucide-react": "^0.525.0",
    "next": "^15.1.6",
    "next-auth": "^5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "punycode": "^2.3.1",
    "react": "^19.2.3",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.2.3",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hook-form": "^7.61.1",
    "recharts": "^3.1.2",
    "resend": "^4.7.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "stripe": "^19.3.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3"
  }
}
